<div class="row mb-2">
  <div class="col-sm-8">
    <h3><%= @community.name %></h3>
  </div>
  <div class="col-sm-4">
    <% if @is_subscribed %>
      <%= link_to "Create New Post", new_community_post_path(@community), class: "btn btn-primary float-right" %>
    <% else %>
      <%= render partial: "communities/subscribe", locals: { community_id: @community.id } %>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-sm-8">
    <%= render partial: "posts/list", locals: { posts: @posts }%>
  </div>
  <div class="col-sm-4">
    <div class="card p-3 mb-3">
      <p class="h6">About community</p>
      <p class="mt-2"><%= @community.description%></p>
      <p><%= pluralize @subscribers_count, "member" %></p>
    </div>
    <div class="card p-3 mb-3">
      <p class="h6">Rules</p>
      <p><%= simple_format @community.rules %></p>
    </div>
  </div>
</div>
