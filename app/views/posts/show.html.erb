<h2><%= @post.title %></h2>

<%= simple_format @post.body %>

<div id="post-comments">
  <%= render partial: "posts/comments", locals: { comments: @post.comments } %>
</div>

<h5>Leave a comment</h5>
<%= form_for @comment, remote: true do |f| %>
  <%= f.hidden_field :post_id, value: @post.id %>
  <%= f.text_area :message, placeholder: "Contribute to this post by commenting here ...", class: "form-control" %>
  <%= f.submit "Comment", class: "btn btn-success float-right mt-3 mb-3" %>
<% end %>
