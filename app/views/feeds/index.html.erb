<p id="notice"><%= notice %></p>

<h2>RSS Feeds</h2>
<div class="col-10">
  <div class="float-right pb-2 mt-3">
    <%= link_to "Create New Feed", new_feed_path, class: "btn btn-outline-primary" %>
  </div>
</div>

<% if @feeds.size > 0 %>
  <% @feeds.each do |feed| %>
    <div class="col-8">
      <div class="card pb-2 mt-3 mr-3 pl-3 mb-3 ">
        <h3 class= "mb-2 mt-2"><%=link_to feed.name, feed%></h3>
        <%= link_to 'Edit', edit_feed_path(feed) %>
        <%= link_to 'Delete', feed, method: :delete, data: { confirm: 'Are you sure?' } %>
      </div>
    </div>
  <% end %>
<% else %>
  <p>No feeds to display</p>
<% end %>
