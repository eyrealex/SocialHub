<div class="row">
  <div class="col-sm-6">
    <%= form_with(model: feed) do |form| %>
    <% if feed.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(feed.errors.count, "error") %>
          prohibited this feed from being saved:</h2>

        <ul>
          <% feed.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <p>
        <%= form.label :name %></p>
      <p>
        <%= form.text_field :name %></p>
    </div>

    <div class="field">
      <p><%= form.label :url %></p>
      <p><%= form.text_field :url %></p>

    </div>

    <div class="field">
      <p><%= form.label :description %></p>
      <p><%= form.text_area :description %></p>

    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
  <% end %>
</div>
</div>
